# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/bigdata_platform_development

# Redis Configuration (for caching and Sidekiq)
REDIS_URL=redis://localhost:6379/0

# Rails Configuration
RAILS_ENV=development
RAILS_MAX_THREADS=5
RAILS_MIN_THREADS=5
PORT=3000

# Secret Key Base (generate with: rails secret)
SECRET_KEY_BASE=your_secret_key_base_here

# AWS Configuration (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# Google Cloud Configuration (optional)
GOOGLE_CLOUD_PROJECT=your-gcp-project
GOOGLE_CLOUD_KEYFILE=path/to/keyfile.json

# Azure Configuration (optional)
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_ACCESS_KEY=your_access_key

# API Configuration
API_VERSION=v1
API_BASE_URL=http://localhost:3000/api/v1

# Monitoring and Loggin
LOG_LEVEL=info
ENABLE_LOGGING=true

# CORS Configuration
CORS_ORIGINS=http://localhost:4200,http://127.0.0.1:4200

# Background Jobs
SIDEKIQ_CONCURRENCY=10
SIDEKIQ_TIMEOUT=25

# Cache Configuration
CACHE_EXPIRES_IN=